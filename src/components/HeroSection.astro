<section class="pt-32 pb-20 md:pt-48 md:pb-32 px-4 relative overflow-hidden">
  <!-- Decorative blobs -->
  <div
    class="absolute top-20 left-[-100px] w-64 h-64 bg-primary/20 rounded-full blur-3xl -z-10"
  >
  </div>
  <div
    class="absolute bottom-10 right-[-50px] w-80 h-80 bg-accent/20 rounded-full blur-3xl -z-10"
  >
  </div>

  <div
    class="max-w-[1200px] mx-auto flex flex-col md:flex-row items-center gap-12 md:gap-20"
  >
    <!-- Text Content -->
    <div
      class="flex-1 flex flex-col items-center md:items-start text-center md:text-left z-10"
    >
      <div
        class="inline-flex items-center gap-2 px-4 py-2 bg-white border-2 border-panda-black rounded-full shadow-neo-sm mb-6 rotate-[-2deg]"
      >
        <span class="material-symbols-outlined text-accent text-sm"
          >local_fire_department</span
        >
        <span class="font-bold text-xs uppercase tracking-wider"
          >Trending #1 in Education</span
        >
      </div>
      <h1
        class="font-display font-black text-5xl md:text-7xl lg:text-8xl leading-[0.9] tracking-tight mb-6 text-panda-black drop-shadow-sm"
      >
        Stop Rotting.<br />
        <span class="text-primary">Start Dripping.</span>
      </h1>
      <p
        class="font-bold text-lg md:text-xl text-panda-black/70 max-w-lg mb-10 leading-relaxed"
      >
        Turn your scroll time into fluency. Finally, an app that gets it. No
        boring drills, just straight vibes and street smarts.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 w-full sm:w-auto">
        <button
          class="btn-neo h-14 px-8 bg-primary text-panda-black text-lg font-display font-bold rounded-full border-2 border-panda-black shadow-neo flex items-center justify-center gap-2 group"
        >
          <span class="material-symbols-outlined group-hover:animate-bounce"
            >download</span
          >
          Get the App
        </button>
        <button
          class="btn-neo h-14 px-8 bg-white text-panda-black text-lg font-display font-bold rounded-full border-2 border-panda-black shadow-neo flex items-center justify-center gap-2 hover:bg-gray-50"
        >
          Join Waitlist
          <span class="material-symbols-outlined">arrow_forward</span>
        </button>
      </div>
    </div>

    <!-- Visual Hook -->
    <div class="flex-1 w-full flex justify-center md:justify-end relative">
      <!-- Panda Mascot Peeking -->
      <div
        class="absolute -top-16 -right-4 md:right-10 z-20 w-32 h-32 md:w-40 md:h-40 bg-contain bg-no-repeat bg-center rotate-12"
        style="background-image: url('https://lh3.googleusercontent.com/aida-public/AB6AXuDcbZHFNRF4mhPmeYw1qhMQYy4yqt263aZF8KIotcA4BAfxBIwZLOX6S7DUPq-pbEc75Lx34mDYLt72ptoWTmOGUCLWDJL8bQyufw79BYd9dORL6E8xNhXuvfNaiv1WccqpHCZMhQdhR9Zi1EdOpRhEgQojJp3YfcvkVWXGQxEodt2bph7TPWCDCr6Aywl3MTVbhR_6NbJwyQwK93Vnf7bHi4PfCrZ7DL76R9HuCFwakQ274La-Vfaf7G_XqxUaGh6cxtR5DHBSB38o'); filter: drop-shadow(4px 4px 0px #052e16);"
      >
      </div>

      <!-- Phone Container -->
      <div class="relative animate-float z-10">
        <div
          class="w-[280px] sm:w-[320px] h-[580px] sm:h-[640px] bg-panda-black rounded-[3rem] p-3 shadow-2xl border-4 border-panda-black"
        >
          <!-- Screen Content -->
          <div
            class="w-full h-full bg-white rounded-[2.5rem] overflow-hidden relative border-2 border-gray-800"
          >
            <!-- Status Bar Mock -->
            <div
              class="absolute top-0 w-full h-8 flex justify-between px-6 items-center z-20 text-white text-[10px] font-bold"
            >
              <span>9:41</span>
              <div class="flex gap-1">
                <span class="material-symbols-outlined text-[14px]"
                  >signal_cellular_alt</span
                >
                <span class="material-symbols-outlined text-[14px]">wifi</span>
                <span class="material-symbols-outlined text-[14px]"
                  >battery_full</span
                >
              </div>
            </div>

            <!-- Video Feed Mock -->
            <div
              class="absolute inset-0 bg-gray-200 bg-cover bg-center"
              style="background-image: url('https://lh3.googleusercontent.com/aida-public/AB6AXuCe4sg8BsNf58Ivi5McQMGBgUd4Mam7GVCumGlREZZ2nLLfzHihX2lNvmAiSRVVM-gMAp4uUFv4iPQ4ZyupG369kagnLYZcg_k0klS7AhrDX7OkWegfzSjUVCSv5tIxVdrZRcESKa1-ZXILeT2cjlJbIdtFDYf-WAfKNYKlcozyvLRVkLqT2UWIJkhDhIf-RidvJCUZgoa1AQ5yqxtAOS4skd36A5Ol-J64195zYUQ2ggxvhZp3VhwTpeyCE4zYc7l5Vd5SQcee7SAS');"
            >
              <div
                class="absolute inset-0 bg-gradient-to-b from-black/30 via-transparent to-black/60"
              >
              </div>
            </div>

            <!-- UI Overlay -->
            <div class="absolute bottom-0 w-full p-4 flex flex-col gap-3 z-20">
              <div
                class="flex flex-col items-end gap-4 absolute right-4 bottom-24"
              >
                <div class="flex flex-col items-center gap-1">
                  <div
                    class="size-10 bg-white/20 backdrop-blur rounded-full flex items-center justify-center text-white"
                  >
                    <span class="material-symbols-outlined">favorite</span>
                  </div>
                  <span class="text-white text-xs font-bold">4.2k</span>
                </div>
                <div class="flex flex-col items-center gap-1">
                  <div
                    class="size-10 bg-white/20 backdrop-blur rounded-full flex items-center justify-center text-white"
                  >
                    <span class="material-symbols-outlined">chat_bubble</span>
                  </div>
                  <span class="text-white text-xs font-bold">203</span>
                </div>
                <div class="flex flex-col items-center gap-1">
                  <div
                    class="size-10 bg-primary border-2 border-white rounded-full flex items-center justify-center text-panda-black shadow-lg"
                  >
                    <span class="material-symbols-outlined font-bold">bolt</span
                    >
                  </div>
                  <span class="text-white text-xs font-bold">Quiz</span>
                </div>
              </div>

              <div class="text-white pr-16">
                <div
                  class="inline-block bg-accent px-2 py-0.5 rounded-md text-[10px] font-bold mb-1 uppercase tracking-wide border border-panda-black"
                >
                  Slang Lesson
                </div>
                <h3
                  class="font-display font-bold text-xl leading-tight drop-shadow-md"
                >
                  "No Cap" = For Real ðŸ§¢
                </h3>
                <p class="text-sm opacity-90 mt-1">
                  Use this when you're 100% serious.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
